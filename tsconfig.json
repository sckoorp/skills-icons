{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "lib": [
            "es6"
        ],
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "api",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
    },
    "include": [
        "api/**/*.ts",
        "types.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}